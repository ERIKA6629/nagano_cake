<div class="container my-4 mx-auto">
  <% if @customer.errors.any? %>
    <%= @customer.errors.count %>件のエラーが発生しました
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row mt-3">
    <h2 class="bg-light px-3"><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h2>
  </div>

  <%= form_with model: @customer, url: admin_customer_path do |f| %>
    <div class="row mt-3">
      <div class="col-2">
        会員ID
      </div>
      <div class="col-4">
        <%= @customer.id %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-2">
        氏名
      </div>
      <div class="col-6">
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-2">
        フリガナ
      </div>
      <div class="col-6">
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-2">
        郵便番号
      </div>
      <div class="col-6">
        <%= f.text_field :postal_code %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-2">
        住所
      </div>
      <div class="col-6">
        <%= f.text_field :address, class: "form-control border-dark form-control-sm" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-2">
        電話番号
      </div>
      <div class="col-6">
        <%= f.text_field :telephone_number %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-2">
        メールアドレス
      </div>
      <div class="col-6">
        <%= f.text_field :email %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-2">
        会員ステータス
      </div>
      <div class="col-6">
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "有効", for: "customer_is_active_true" %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "退会", for: "customer_is_active_false" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-2"></div>
      <%= f.submit '変更を保存', class: "btn btn-success px-3" %>
    </div>
  <% end %>
</div>