<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= @customer.last_name + @customer.first_name %>さんの会員情報編集

  <%= form_with model: @customer, url: admin_customer_path do |f| %>
  <table>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>
        <p>氏名</p>
      </td>
      <td>
        <%= f.text_field :last_name %>
      </td>
      <td>
        <%= f.text_field :first_name %>
      </td>
    </tr>
    <tr>
      <td>
        <p>フリガナ</p>
      </td>
      <td>
        <%= f.text_field :last_name_kana %>
      </td>
      <td>
        <%= f.text_field :first_name_kana %>
      </td>
    </tr>
    <tr>
      <td>
        <p>郵便番号</p>
      </td>
      <td>
        <%= f.text_field :postal_code %>
      </td>
    </tr>
    <tr>
      <td>
        <p>住所</p>
      </td>
      <td>
        <%= f.text_field :address %>
      </td>
    </tr>
    <tr>
      <td>
        <p>電話番号</p>
      </td>
      <td>
        <%= f.text_field :telephone_number %>
      </td>
    </tr>
    <tr>
      <td>
        <p>メールアドレス</p>
      </td>
      <td>
        <%= f.text_field :email %>
      </td>
    </tr>
    <tr>
      <td>
        <p>会員ステータス</p>
      </td>
      <td>
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "有効", for: "customer_is_active_true" %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "退会", for: "customer_is_active_false" %>
      </td>
    </tr>
    </table>
      <%= f.submit '変更を保存' %>
  <% end %>