<div class="container px-5 mx-auto">
  
  <div class="row mt-3">
    <div class="col-1"></div>
    <h2 class="bg-light px-3">商品編集</h2>
  </div>

  <%= form_with model: @item, url: admin_item_path do |f| %>
    <div class="row mb-2">
      <div class="col-2"></div>
      <div class="col-2">
        <p>商品画像</p>
      </div>
      <div class="col-4">
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>
    <div class="row mb-2">
      <div class="col-2"></div>
      <div class="col-2">
        <p>商品名</p>
      </div>
      <div class="col-4">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="row mb-2">
      <div class="col-2"></div>
      <div class="col-2">
        <p>商品説明</p>
      </div>
      <div class="col-4">
        <%= f.text_area :introduction, class: "form-control", rows: "5" %>
      </div>
    </div>
    <div class="row mb-2">
      <div class="col-2"></div>
      <div class="col-2">
        <p>税抜価格</p>
      </div>
      <div class="col-4">
        <%= f.text_field :price, class: "form-control" %>
      </div>
    </div>
    <div class="row mb-2">
      <div class="col-2"></div>
      <div class="col-2">
        <p>販売ステータス</p>
      </div>
      <div class="col-4">
        <%= f.radio_button :is_sold_out, false %>
        <%= f.label :is_sold_out, "販売中" %>
        <%= f.radio_button :is_sold_out, true %>
        <%= f.label :is_sold_out, "販売停止中" %>
      </div>
    </div>
    <div class="row mb-2">
      <div class="mx-auto">
        <%= f.submit '変更を保存', class: "btn btn-success px-3" %>
      </div>
    </div>
  <% end %>
</div>