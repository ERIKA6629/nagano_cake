<p>商品一覧</p>
<%= link_to "+", new_admin_item_path %>

<table>
  <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ステータス</th>
  </tr>
  
  <% @items.each do |f| %>
    <tr>
      <td>
        <span><%= f.id %></span>
      </td>
      <td>
        <%= link_to admin_item_path(f) do %>
          <%= f.name %>
        <% end %>
      </td>
      <td>
        <span><%= f.price.to_s(:delimited) %></span>
      </td>
    
      <% if f.is_sold_out == false %>
        <td>
          <span>販売中</span>
        </td>
      <% else %>
        <td>
          <span>販売停止中</span>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>

<%= paginate @items %>