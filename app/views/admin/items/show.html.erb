<div class="container px-5 mx-auto">
  <div class="row mt-3">
    <div class="col-1"></div>
    <h2 class="bg-light px-3">商品詳細</h2>
  </div>
  <div class="row">
    <div class="col-4">
      <%= image_tag @item.image, size: "300x300" %>
    </div>
    <div class="col-7">
      <table class="table table-borderless">
        <tr>
          <td>
            商品名
          </td>
          <td>
            <span><%= @item.name %></span>
          </td>
        </tr>
        <tr>
          <td>
            商品説明
          </td>
          <td>
            <%= @item.introduction %>
          </td>
        </tr>
        <tr>
          <td>
            税抜価格<br>
            (税抜価格)
          </td>
          <td>
            <span class="d-flex align-items-center"><%= @include_tax.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</span>
          </td>
        </tr>
        <tr>
          <td>
            販売ステータス
          </td>
            <% if @item.is_sold_out == false %>
              <td>
                <span class="text-success font-weight-bold">販売中</span>
              </td>
            <% else %>
              <td>
                <span class="text-secondary font-weight-bold">販売停止中</span>
              </td>
            <% end %>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto mb-3">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success px-4" %>
    </div>
  </div>
</div>