<p>商品詳細</p>

  <%= image_tag @item.image, size: "200x200" %>
  <table>
    <tr>
      <td>
        商品名
      </td>
      <td>
        <span><%= @item.name %></span>
      </td>
    </tr>
    <tr>
      <td>
        商品説明
      </td>
      <td>
        <%= @item.introduction %>
      </td>
    </tr>
    <tr>
      <td>
        税抜価格<br>
        (税抜価格)
      </td>
      <td>
        <%= @include_tax.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円
      </td>
    </tr>
    <tr>
      <td>
        販売ステータス
      </td>
        <% if @item.is_sold_out == false %>
          <td>
            <span>販売中</span>
          </td>
        <% else %>
          <td>
            <span>販売停止中</span>
          </td>
        <% end %>
    </tr>
    </table>
    
    <%= link_to "編集する", edit_admin_item_path(@item.id) %>