<div class="container m-5">
  
  <div class="row">
    <div class="col-3"></div>
      <span class="bg-light fs-3 p-3 ">管理者ログイン</span>
  </div>
  
  <%= form_with model: @admin, url: admin_session_path do |f| %>
    <div class="field mt-5">
      <div class="row">
        <span class="col-6 text-right"><%= f.label :メールアドレス %></span>
        <span class="col-6"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></span>
      </div>
    </div>
    
    <div class="field mt-5">
      <div class="row">
        <span class="col-6 text-right"><%= f.label :パスワード %></span>
        <span class="col-6"><%= f.password_field :password, autocomplete: "current-password" %></span>
      </div>
    </div>
    
      <!--<% if devise_mapping.rememberable? %>-->
      <!--  <div class="field">-->
      <!--    <%= f.check_box :remember_me %>-->
      <!--    <%= f.label :remember_me %>-->
      <!--  </div>-->
      <!--<% end %>-->
      <div class="row mt-5">  
        <div class="col-6"></div>
        <div class="col-6">
          <div class="actions">
            <%= f.submit "ログイン",class: "btn btn-primary px-4" %>
          </div>
        </div>
      </div>
    <% end %>
        
        <%= render "admin/shared/links" %>
    </div>
</div>