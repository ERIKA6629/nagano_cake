<div class="container my-3 mx-auto">
  <div class="row mt-3">
    <h2 class="bg-light px-3">ログイン</h2>
  </div>
  <div class="row mt-3">
    <h3 class="bg-light px-3">会員の方はこちらからログイン</h3>
  </div>
  
<%= form_with model: @customer, url: customer_session_path do |f| %>
  <div class="row mt-3 px-5">
    <div class="col-3">メールアドレス</div>
    <div class="col-4">
      <div class="field">
        <%= f.email_field :email, autofocus: true,  class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row mt-3 px-5">
    <div class="col-3">パスワード</div>
    <div class="col-4">
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>
  </div>

  <!--<% if devise_mapping.rememberable? %>-->
  <!--  <div class="field">-->
  <!--    <%= f.check_box :remember_me %>-->
  <!--    <%= f.label :remember_me %>-->
  <!--  </div>-->
  <!--<% end %>-->
  <div class="row mt-3 px-5">
    <div class="col-3"></div>
    <div class="col-2">
      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary form-control" %>
      </div>
    </div>
  </div>
<% end %>

<%= render "public/shared/links" %>
</div>
