<p>注文履歴詳細</p>
<p>注文情報</p>
<table>
  <tr>
    <td>注文日</td>
    <td>
      <%= @order.created_at.strftime('%Y/%m/%d') %>
    </td>
  </tr>
  <tr>
    <td>配送先</td>
    <td>
      〒<%= @order.postal_code %><br>
      <%= @order.address %><br>
      <%= @order.name %>
    </td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td>
      <%= @order.payment_method_i18n %>
    </td>
  </tr>
  <tr>
    <td>ステータス</td>
    <td>
      <%= @order.status_i18n %>
    </td>
  </tr>
</table>

<p>請求情報</p>
<table>
  <tr>
    <td>商品合計</td>
    <td>
      <%= (@order.total_price - @order.shipping_fee).to_s(:delimited) %>
    </td>
  </tr>
  <tr>
    <td>配送料</td>
    <td>
      <%= @order.shipping_fee %>
    </td>
  </tr>
  <tr>
    <td>ご請求額</td>
    <td>
      <%= @order.total_price.to_s(:delimited) %>
    </td>
  </tr>
</table>

<p>注文内容</p>
<table>
  <thread>
    <th>商品</th>
    <th>単価(税込)</th>
    <th>個数</th>
    <th>小計</th>
  </thread>
  <tbody>
    <% @order.order_details.each do |order_detail| %>
      <tr>
        <td>
          <%= order_detail.item.name %>
        </td>
        <td>
          <%= order_detail.price.to_s(:delimited) %>
        </td>
        <td>
          <%= order_detail.amount %>
        </td>
        <td>
          <%= (order_detail.price * order_detail.amount).to_s(:delimited) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>