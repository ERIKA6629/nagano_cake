<div class="container my-5 mx-auto">
  
  <div class="row mt-3">
    <h2 class="bg-light text-center">注文情報確認</h2>
  </div>
<table>
  <thead>
    <th colspan="2">商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </thead>
<% @orders.each do |f| %>
  <tbody>
    <td>
      <%= image_tag f.item.image, size: "50x50" %>
    </td>
    <td>
      <%= f.item.name %>
    </td>
    <td>
      <%= f.item.with_tax_price.to_s(:delimited) %>
    </td>
    <td>
      <%= f.amount %>
    </td>
    <td>
      <%= f.subtotal.to_s(:delimited) %>
    </td>
  </tbody>
  <% @total_price += f.subtotal.to_i %>
<% end %>

  <tbody>
    <tr>
      <td>送料</td>
      <td><%= @shipping_fee %></td>
    </tr>
    <tr>
      <td>商品合計</td>
      <td><%= @total_price.to_s(:delimited) %></td>
    </tr>
  </tbody>
</table>
<p>支払い方法 <%= @order.payment_method_i18n %></p> 
  <p><%= "〒" + @order.postal_code + " " + @order.address %></p>
  <p><%= @order.name %></p>
  
  <%= form_with model: @order, url: orders_path, method: :post do |f| %>
  
  <%= f.hidden_field :postal_code, :value => @order.postal_code  %>
  <%= f.hidden_field :address, :value => @order.address  %>
  <%= f.hidden_field :name, :value => @order.name  %>
  <%= f.hidden_field :status, :value => Order.status_methods.key(0)  %>
  <%= f.hidden_field :total_price, :value => @total_price + @shipping_fee %>
  <%= f.hidden_field :shipping_fee, :value => @shipping_fee  %>
  <%= f.submit '注文を確定する' %>
<% end %>
</div>