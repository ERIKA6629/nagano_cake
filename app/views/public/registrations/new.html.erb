<div class="container my-3 mx-auto">
  
  <div class="row mt-3">
    <h2 class="bg-light px-3">新規会員登録</h2>
  </div>
  
  
    <%= form_with model: @customer, url: customer_registration_path do |f| %>
  <div class="row mt-3">
    <%= render "public/shared/error_messages", resource: resource %>
  </div>
  
  <div class="row mt-3">
    <div class="col-3">
      名前
    </div>
    <div class="col-1 text-right">
      姓
    </div>
    <div class="col-3">
      <div class="field">
        <%= f.text_field :last_name, autofocus: true, placeholder: "令和", class: "form-control border-dark" %>
      </div>
    </div>
    <div class="col-1 text-right">
      姓
    </div>
    <div class="col-3">
      <div class="field">
        <%= f.text_field :first_name, autofocus: true, placeholder: "道子", class: "form-control border-dark" %>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3">
      フリガナ
    </div>
    <div class="col-1 text-right">
      (セイ)
    </div>
    <div class="col-3">
      <div class="field">
        <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ", class: "form-control border-dark" %>
      </div>
    </div>
    <div class="col-1 text-right">
      (メイ)
    </div>
    <div class="col-3">
      <div class="field">
        <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ", class: "form-control border-dark" %>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3">
      メールアドレス
    </div>
    <div class="col-1"></div>
    <div class="col-3">
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", class: "form-control border-dark" %>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3">
      郵便番号(ハイフンなし)
    </div>
    <div class="col-1"></div>
    <div class="col-3">
      <div class="field">
        <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", class: "form-control border-dark" %>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3">
      住所
    </div>
    <div class="col-1"></div>
    <div class="col-7">
      <div class="field">
        <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木１−１", class: "form-control border-dark" %>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3">
      電話番号(ハイフンなし)
    </div>
    <div class="col-1"></div>
    <div class="col-3">
      <div class="field">
        <%= f.text_field :telephone_number, autofocus: true, placeholder: "00000000000", class: "form-control border-dark" %>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3">
      パスワード(6文字以下)
    </div>
    <div class="col-1"></div>
    <div class="col-3">
      <div class="field">
        <% if @minimum_password_length %>
        <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
        <!--<% end %><br />-->
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control border-dark" %>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3">
      パスワード(確認用)
    </div>
    <div class="col-1"></div>
    <div class="col-3">
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control border-dark" %>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-4"></div>
    <div class="col-3">
      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success form-control" %>
      </div>
    </div>
  </div>
<% end %>

<%= render "public/shared/links" %>
</div>
