<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <table>
    <tr>
      <td>
        名前
      </td>
      <td>
        <div class="field">
          <%= f.label :'(姓)' %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "令和" %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :'(名)' %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "道子" %>
        </div>
      </td>
    </tr>
  
    <tr>
      <td>
        フリガナ
      </td>
      <td>
        <div class="field">
          <%= f.label :'(セイ)' %>
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "道子" %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :'(メイ)' %>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "道子" %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        メールアドレス
      </td>
      <td>
        <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </td>
    </tr>
  
    <tr>
      <td>
        郵便番号(ハイフンなし)
      </td>
      <td>
        <div class="field">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "道子" %>
        </div>
      </td>
    </tr>
  
    <tr>
      <td>
        住所
      </td>
      <td>
        <div class="field">
          <%= f.text_field :address, autofocus: true, autocomplete: "道子" %>
        </div>
      </td>
    </tr>
    
    <tr>
      <td>
        電話番号(ハイフンなし)
      </td>
      <td>
        <div class="field">
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "道子" %>
        </div>
      </td>
    </tr>
  
    <tr>
      <td>
        パスワード(6文字以下)
      </td>
      <td>
        <div class="field">
          <% if @minimum_password_length %>
          <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
          <!--<% end %><br />-->
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </td>
    </tr>

    <tr>
      <td>
        パスワード(確認用)
      </td>
      <td>
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </td>
    </tr>
  
  </table>
  
  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
