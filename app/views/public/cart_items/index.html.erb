<p>ショッピングカート</p>
<table>
  <thead>
    <th colspan="2">商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </thead>
  <tbode>
  <% @cart_item.each do |f| %>
    <tr>
      <td>
        <%= image_tag f.item.image, size: "50x50" %>
      </td>
      <td>
        <%= f.item.name %>
      </td>
      <td>
        <%= f.item.with_tax_price.to_s(:delimited) %>
      </td>
      <td>
        <%= f.amount %>
      </td>
      <td>
        <%= f.subtotal.to_s(:delimited) %>
      </td>
    </tr>
    <tr>
      <td colspan="5"></td>
    </tr>
    <tr>
      <td colspan="3"></td>
      <td>合計金額</td>
      <td>
        <% @total_price += f.subtotal %>
        <%= @total_price.to_s(:delimited) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
    